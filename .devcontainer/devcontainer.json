{
  "name": "Python 3 with Jupyter",
  // 公式のPython 3 Dev Containerイメージを使用
  "image": "mcr.microsoft.com/devcontainers/python:3.10",

  "customizations": {
    "vscode": {
      // VS Codeに必要なJupyter拡張機能をインストール
      "extensions": [
        "ms-toolsai.jupyter"
      ]
    }
  },

  // コンテナが作成された後に実行するコマンド
  "postCreateCommand": "pip install jupyterlab",

  // Jupyterが使用するポートをフォワーディング
  "forwardPorts": [8888]
}
